<%- include('../../layout/header', {title:'create-blog'}) %>

<div class="container mt-4">
    <h3 class="mt-3 mb-3">Create Form</h3>
    <form action="/blog/create-blog" method="POST" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="coverImageURL">Image</label>
                <input type="file" class="form-control" id="coverImageURL" name="coverImageURL">
            </div> 
            <div class="mt-4 form-group col-md-6">
                <label for="Title">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Title">
            </div> 
             <div class="mt-4 form-group col-md-6">
                <label for="description">Description</label>
                <textarea type="text" class="form-control" id="description" name="description" rows="7" placeholder="Enter description"></textarea>
            </div> 
        <button type="submit" class="mt-2 btn btn-primary">Create</button>
    </form>

</div>

<%- include('../../layout/footer') %>
